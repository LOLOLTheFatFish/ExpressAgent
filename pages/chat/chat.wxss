/* Global Settings */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f6f7f8;
  color: #111418;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
  overflow: hidden;
}

@media (prefers-color-scheme: dark) {
  page {
    background-color: #101822;
    color: #ffffff;
  }
}

/* Utilities */
.hidden {
  display: none !important;
}

.flex {
  display: flex;
}

.flex-col {
  flex-direction: column;
}

.items-center {
  align-items: center;
}

.justify-center {
  justify-content: center;
}

.justify-between {
  justify-content: space-between;
}

.w-full {
  width: 100%;
}

.h-full {
  height: 100%;
}

.text-primary {
  color: #3182ed;
}

/* Main Content Area */
.main-content {
  flex: 1;
  width: 100%;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

/* Search View */
.search-view {
  min-height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 24px 96px 24px;
  box-sizing: border-box;
}

.illustration-container {
  margin-bottom: 24px;
  position: relative;
}

.glow-effect {
  position: absolute;
  inset: 0;
  background-color: #60a5fa;
  filter: blur(40px);
  opacity: 0.2;
  border-radius: 9999px;
}

.package-image {
  position: relative;
  width: 128px;
  height: 128px;
  border-radius: 9999px;
  background-color: #e5e7eb;
  overflow: hidden;
}

.package-image image {
  width: 100%;
  height: 100%;
}

.page-title {
  font-size: 32px;
  font-weight: 700;
  line-height: 1.2;
  text-align: center;
  margin-bottom: 40px;
  color: #111418;
}

@media (prefers-color-scheme: dark) {
  .page-title {
    color: #ffffff;
  }
}

.search-box-container {
  width: 100%;
  position: relative;
}

.search-input {
  display: block;
  width: 100%;
  border-radius: 9999px;
  border: none;
  
  /* 修改点 1: 垂直 padding 改为 0，水平保持 24px */
  padding: 0 24px; 
  padding-right: 96px; /* 给右边图标留位置 */
  
  font-size: 16px;
  background-color: #ffffff;
  color: #111418;
  box-shadow: 0 2px 8px rgba(0,0,0,0.04);
  box-sizing: border-box;

  /* 修改点 2: 显式指定高度和最小高度，确保文字垂直居中 */
  height: 56px;
  min-height: 56px;
  line-height: 56px;
}

@media (prefers-color-scheme: dark) {
  .search-input {
    background-color: #1a222e;
    color: #ffffff;
  }
}

.search-icons {
  position: absolute;
  top: 0;
  bottom: 0;
  right: 0;
  padding-right: 16px;
  display: flex;
  align-items: center;
  gap: 12px;
  z-index: 10;
}

.icon-btn {
  padding: 4px;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* Chat View */
.chat-view {
  padding: 16px;
  padding-bottom: 96px;
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.date-divider {
  display: flex;
  justify-content: center;
  margin: 8px 0;
}

.date-badge {
  font-size: 12px;
  font-weight: 500;
  color: #9ca3af;
  background-color: rgba(229, 231, 235, 0.6);
  padding: 4px 12px;
  border-radius: 9999px;
}

@media (prefers-color-scheme: dark) {
  .date-badge {
    background-color: rgba(31, 41, 55, 0.6);
  }
}

/* Messages */
.msg-wrapper {
  display: flex;
  gap: 12px;
  width: 100%;
  margin-bottom: 16px;
}

.msg-wrapper.user {
  justify-content: flex-end;
  align-items: flex-end;
}

.msg-wrapper.assistant {
  align-items: flex-start;
}

.avatar {
  width: 40px;
  height: 40px;
  flex-shrink: 0;
  border-radius: 9999px;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 1px 2px rgba(0,0,0,0.05);
  font-size: 20px;
}

@media (prefers-color-scheme: dark) {
  .avatar {
    background-color: #1f2937;
    border: 1px solid #374151;
  }
}

.msg-content {
  display: flex;
  flex-direction: column;
  gap: 4px;
  max-width: 85%;
}

.msg-wrapper.user .msg-content {
  align-items: flex-end;
}

.bubble {
  padding: 12px 16px;
  font-size: 14px;
  line-height: 1.5;
  box-shadow: 0 1px 2px rgba(0,0,0,0.05);
}

.bubble.user {
  background-color: #3182ed;
  color: #ffffff;
  border-radius: 16px 16px 2px 16px;
}

.user-label {
  font-size: 11px;
  color: #9ca3af;
  margin-right: 4px;
  font-weight: 500;
}

/* Cards */
.card {
  width: 100%;
  background-color: #ffffff;
  border-radius: 16px;
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  overflow: hidden;
  border: 1px solid #f3f4f6;
}

@media (prefers-color-scheme: dark) {
  .card {
    background-color: #1f2937;
    border-color: #374151;
  }
}

.card-header {
  padding: 12px 16px;
  display: flex;
  align-items: center;
  gap: 8px;
  border-bottom: 1px solid rgba(0,0,0,0.05);
}

.card-header.normal {
  background-color: #eff6ff; /* blue-50 */
}

.card-header.closed {
  background-color: #fefce8; /* yellow-50 */
}

@media (prefers-color-scheme: dark) {
  .card-header.normal { background-color: rgba(30, 58, 138, 0.2); border-bottom-color: rgba(30, 58, 138, 0.3); }
  .card-header.closed { background-color: rgba(113, 63, 18, 0.2); border-bottom-color: rgba(113, 63, 18, 0.3); }
}

.card-status-text {
  font-size: 14px;
  font-weight: 600;
}

.text-blue { color: #1e3a8a; }
.text-yellow { color: #713f12; }

@media (prefers-color-scheme: dark) {
  .text-blue { color: #bfdbfe; }
  .text-yellow { color: #fef08a; }
}

.card-body {
  padding: 24px 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.pickup-code {
  font-size: 42px;
  font-weight: 900;
  line-height: 1;
  margin-bottom: 4px;
  letter-spacing: -0.025em;
}

.pickup-label {
  font-size: 12px;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.1em;
  color: #6b7280;
  margin-top: 8px;
}

.card-map {
  position: relative;
  width: 100%;
  height: 112px; /* 28 * 4 */
  background-color: #e5e7eb;
}

.map-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.map-pin {
  position: absolute;
  inset: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36px;
}

/* Error Card */
.card-error-body {
  padding: 32px 24px;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.error-icon-wrapper {
  width: 96px;
  height: 96px;
  margin-bottom: 24px;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff7ed; /* orange-50 */
  border-radius: 9999px;
}

@media (prefers-color-scheme: dark) {
  .error-icon-wrapper {
    background-color: rgba(124, 45, 18, 0.1);
  }
}

.error-title {
  font-size: 20px;
  font-weight: 700;
  margin-bottom: 8px;
  color: #111418;
}

.error-desc {
  font-size: 14px;
  color: #6b7280;
  margin-bottom: 16px;
}

@media (prefers-color-scheme: dark) {
  .error-title { color: #ffffff; }
  .error-desc { color: #9ca3af; }
}

.error-actions {
  padding: 0 20px 24px;
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.btn-primary {
  width: 100%;
  padding: 14px;
  background-color: #3182ed;
  color: white;
  font-size: 15px;
  font-weight: 600;
  border-radius: 12px;
  text-align: center;
}

.btn-secondary {
  width: 100%;
  padding: 14px;
  background-color: #ffffff;
  color: #4b5563;
  font-size: 15px;
  font-weight: 600;
  border-radius: 12px;
  border: 1px solid #e5e7eb;
  text-align: center;
}

@media (prefers-color-scheme: dark) {
  .btn-secondary {
    background-color: transparent;
    color: #d1d5db;
    border-color: #374151;
  }
}

/* Loading Animation */
.loading-dots {
  display: flex;
  gap: 4px;
  padding: 12px 16px;
  background-color: #ffffff;
  border-radius: 16px 16px 16px 2px;
  box-shadow: 0 1px 2px rgba(0,0,0,0.05);
}

@media (prefers-color-scheme: dark) {
  .loading-dots {
    background-color: #1f2937;
  }
}

.dot {
  width: 8px;
  height: 8px;
  background-color: #9ca3af;
  border-radius: 50%;
  animation: bounce 1.4s infinite ease-in-out both;
}

.dot:nth-child(1) { animation-delay: -0.32s; }
.dot:nth-child(2) { animation-delay: -0.16s; }

@keyframes bounce {
  0%, 80%, 100% { transform: scale(0); }
  40% { transform: scale(1); }
}

/* Input Area */
.input-area {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #ffffff;
  border-top: 1px solid #f3f4f6;
  padding: 12px 16px; /* Reduced padding-bottom as safe-area handled by view */
  padding-bottom: max(12px, env(safe-area-inset-bottom));
  z-index: 50;
}

@media (prefers-color-scheme: dark) {
  .input-area {
    background-color: #1a222e;
    border-top-color: #1f2937;
  }
}

.input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
}

.chat-input {
  width: 100%;
  background-color: #ffffff;
  border: 1px solid #e5e7eb;
  border-radius: 9999px;
  padding: 14px 20px;
  padding-right: 48px;
  font-size: 14px;
  color: #111418;
}

@media (prefers-color-scheme: dark) {
  .chat-input {
    background-color: #1a222e;
    border-color: #374151;
    color: #ffffff;
  }
}

.send-btn {
  position: absolute;
  right: 8px;
  width: 36px;
  height: 36px;
  background-color: #3182ed;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 20px;
}

/* === 底部导航栏补丁 === */
.bottom-tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #ffffff;
  border-top: 1px solid #f3f4f6;
  padding: 12px 24px;
  /* 适配 iPhone X 等全面屏底部黑条 */
  padding-bottom: max(12px, env(safe-area-inset-bottom)); 
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 100;
  box-shadow: 0 -4px 16px rgba(0,0,0,0.02);
}

@media (prefers-color-scheme: dark) {
  .bottom-tab-bar {
    background-color: #1a222e;
    border-top-color: #1f2937;
  }
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4px;
}

.tab-icon-bg {
  background-color: #eff6ff; /* blue-50 */
  padding: 4px 16px;
  border-radius: 9999px;
}

.tab-icon-wrapper {
  padding: 4px 16px;
}

.tab-icon {
  font-size: 20px;
  line-height: 1;
}

.tab-icon-gray {
  font-size: 20px;
  line-height: 1;
  filter: grayscale(100%);
  opacity: 0.6;
}

.tab-text {
  font-size: 10px;
  font-weight: 500;
  color: #6b7280;
}

.tab-text.active {
  color: #111418;
  font-weight: 700;
}

@media (prefers-color-scheme: dark) {
  .tab-icon-bg { background-color: rgba(30, 58, 138, 0.2); }
  .tab-text.active { color: #ffffff; }
}