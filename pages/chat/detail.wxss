page { background-color: #f6f7f8; color: #111418; height: 100vh; display: flex; flex-direction: column; }
.container { height: 100%; display: flex; flex-direction: column; }

/* 简易导航栏 */
.nav-bar { padding: 44px 16px 12px; background: white; display: flex; align-items: center; justify-content: space-between; }
.back-btn { font-size: 24px; padding: 4px 12px; }
.nav-title { font-weight: bold; font-size: 16px; }

.content { flex: 1; padding: 24px; }

/* 取件码区域 */
.code-section { display: flex; flex-direction: column; align-items: center; margin-bottom: 32px; }
.pickup-code { font-size: 64px; font-weight: 900; line-height: 1; margin-bottom: 12px; }
.text-blue { color: #3182ed; }
.text-yellow { color: #ca8a04; }

.status-badge { padding: 6px 16px; border-radius: 99px; font-size: 14px; font-weight: 600; display: flex; align-items: center; gap: 6px; }
.bg-blue { background-color: #eff6ff; color: #1e40af; }
.bg-yellow { background-color: #fefce8; color: #854d0e; }

/* 信息卡片 */
.info-card { background: white; border-radius: 24px; overflow: hidden; box-shadow: 0 4px 20px rgba(0,0,0,0.05); margin-bottom: 24px; }
.map-area { height: 200px; position: relative; background: #eee; }
.map-img { width: 100%; height: 100%; }
.map-overlay { position: absolute; top: 16px; left: 16px; }
.live-tag { background: rgba(0,0,0,0.6); color: white; padding: 4px 8px; border-radius: 4px; font-size: 10px; font-weight: bold; display: flex; align-items: center; gap: 4px; }
.dot { width: 6px; height: 6px; background: #ef4444; border-radius: 50%; }

.card-details { padding: 20px; display: flex; justify-content: space-between; align-items: flex-start; }
.station-name { display: block; font-weight: bold; font-size: 18px; margin-bottom: 4px; }
.station-addr { color: #6b7280; font-size: 14px; }
.distance-badge { background: #f3f4f6; padding: 4px 8px; border-radius: 4px; font-size: 12px; font-weight: bold; }

.action-buttons { padding: 0 20px 24px; display: flex; gap: 12px; }
.btn-navigate { flex: 1; background: #3182ed; color: white; border-radius: 12px; font-weight: bold; }
.btn-call { width: 56px; background: white; border: 1px solid #e5e7eb; border-radius: 12px; display: flex; align-items: center; justify-content: center; }

/* 提示框 */
.tips-box { background: #fef9c3; padding: 16px; border-radius: 16px; display: flex; gap: 12px; align-items: flex-start; }
.tips-text { color: #854d0e; font-size: 14px; line-height: 1.5; }